# Environment variables for AutoDubber
# Copy this file to .env and fill in your values

# YouTube Data API Key (optional but recommended)
YOUTUBE_API_KEY=your_api_key_here

# LibreTranslate endpoint (or use default)
LIBRETRANSLATE_ENDPOINT=https://libretranslate.de/translate

# Logging level
LOG_LEVEL=INFO

# Temporary directory
TMP_DIR=/tmp/autodubber

# Processing limits
MAX_CONCURRENT_VIDEOS=1
MAX_VIDEO_DURATION=900
MIN_VIDEO_DURATION=5

# YouTube cookies file (for age-restricted or bot-protected videos)
YOUTUBE_COOKIES_FILE=/app/config/cookies.txt
